generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  email          String @unique
  name           String
  lastName       String
  password       String
  profilePicture String
  permission     String
}

model Class {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  teacherId   String @db.ObjectId
  name        String
  description String
}

model Classroom {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  number Int
}

model Grade {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  percentage Float
}
